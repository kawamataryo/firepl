{
  "name": "firepl",
  "version": "1.2.0",
  "description": "An tiny wrapper of the Node REPL to make firestore easier to use",
  "keywords": [
    "repl",
    "firebase",
    "firestore",
    "cli"
  ],
  "bin": {
    "firepl": "dist/main.js"
  },
  "scripts": {
    "start": "ts-node src/main.ts -c ./service-account.json",
    "build": "tsc",
    "lint": "eslint '{src,tests}/**/*.{js,ts}'",
    "lint:fix": "eslint --fix '{src,tests}/**/*.{js,ts}'",
    "format": "prettier '{src,tests}/**/*.{js,ts}'",
    "format:fix": "prettier --write '{src,tests}/**/*.{js,ts}'",
    "prepare": "husky install"
  },
  "author": "Ryo Kawamata <ba068082@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "firebase-admin": "^9.11.1",
    "node-repl-await": "^0.1.2",
    "pretty-repl": "^3.1.1",
    "yargs": "^17.1.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-conventional": "^13.1.0",
    "@types/node": "^16.9.1",
    "@types/yargs": "^17.0.2",
    "@typescript-eslint/eslint-plugin": "^4.31.0",
    "@typescript-eslint/parser": "^4.31.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "husky": "^7.0.0",
    "lint-staged": ">=10",
    "prettier": "^2.4.0",
    "semantic-release": "^17.4.7",
    "ts-node": "^10.2.1",
    "typescript": "^4.4.2"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "pnpm run format:fix",
      "pnpm run lint:fix"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "type-enum": [
        2,
        "always",
        [
          "feat",
          "fix",
          "docs",
          "style",
          "refactor",
          "test",
          "revert",
          "BREAKING CHANGE",
          "chore"
        ]
      ]
    }
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      ["@semantic-release/release-notes-generator", {
        "preset": "angular",
        "presetConfig": {
          "types": [
            {
              "type": "chore",
              "section": "Chore"
            },
            {
              "type": "refactor",
              "section": "Refactor"
            },
            {
              "type": "perf",
              "section": "Performance"
            }
          ]
        }
      }],
      "@semantic-release/github",
      "@semantic-release/npm"
    ],
    "branches": [
      "main"
    ]
  }
}
